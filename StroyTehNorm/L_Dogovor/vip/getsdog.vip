//--  Пометить группу
Procedure MarkGroup;
var
  LevelClosed: boolean;
  n, i        : word;
  SaveNrec    : comp;
{
  OneMarkPick(false);

  LevelClosed := TreeCloseNode(trDogovor);

  PushPos(#Dogovor);

  n := 0;

  if TreeGetNext(trDogovor)
    {
      SaveNrec := Dogovor.nRec;
      TreeGetPrev(trDogovor);
    }

  if TreeOpenNode(trDogovor)
    {
      inc(n);
      PushPos(#Dogovor);
    }

  if TreeGetNext(trDogovor)
    do
      {
        if ( Dogovor.nRec = SaveNrec )
          Break;

        OneMarkPick(false);

        if TreeOpenNode(trDogovor)
          {
            inc(n);
            PushPos(#Dogovor);
          }
      }
    While TreeGetNext(trDogovor);

  For(i := 1; i <= n; inc(i))
    {
      PopPos(#Dogovor);
      TreeCloseNode(trDogovor);
    }

  PopPos(#Dogovor);

  if ( LevelClosed )
    TreeOpenNode(trDogovor);

  TreeJumpToRecord(trDogovor, Dogovor.nRec);
  RescanPanel(#Dogovor);
}

//--  Отменить пометку группы
Procedure UnMarkGroup;
var
  LevelClosed: boolean;
  n, i        : word;
  SaveNrec    : comp;
{
  DeleteMarker(MarkerDog, Dogovor.nRec);

  LevelClosed := TreeCloseNode(trDogovor);

  PushPos(#Dogovor);

  n := 0;

  if TreeGetNext(trDogovor)
    {
      SaveNrec := Dogovor.nRec;
      TreeGetPrev(trDogovor);
    }

  if TreeOpenNode(trDogovor)
    {
      inc(n);

      PushPos(#Dogovor);
    }

  if TreeGetNext(trDogovor)
    do
      {
        if ( Dogovor.nRec = SaveNrec )
          Break;

        DeleteMarker(MarkerDog, Dogovor.nRec);

        if TreeOpenNode(trDogovor)
          {
            inc(n);
            PushPos(#Dogovor);
          }
      }
    While TreeGetNext(trDogovor);

  For(i := 1; i <= n; inc(i))
    {
      PopPos(#Dogovor);
      TreeCloseNode(trDogovor);
    }

  PopPos(#Dogovor);

  if ( LevelClosed )
    TreeOpenNode(trDogovor);

  TreeJumpToRecord(trDogovor, Dogovor.nRec);
  RescanPanel(#Dogovor);
}

