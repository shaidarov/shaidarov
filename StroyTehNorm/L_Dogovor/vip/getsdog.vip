Function CheckFilters(pDogovor: comp; wTiDk, DogDirect: word): boolean; cacheable;
{
  Result := FALSE;

  if ( (optView AND 256) <> 0 )
    {
      var pPodr: comp; pPodr := -1;

      if ( GetFirst FastFirstRow AttrDog where (( pDogovor == AttrDog.cDogovor )) = tsOk )
        pPodr := AttrDog.cPodr;

      if ( ( pOtvPodr <> pPodr ) OR ( pPodr = -1 ) )
        Exit;
    }

  if ( (optView AND 512) <> 0 )
    {
      if ( RecordExists SpDocs where ((
                                        pDogovor  == SpDocs.cDoc       AND
                                        wTiDk     == SpDocs.TiDk       AND
                                        word(0)   == SpDocs.TipOtvPodr AND
                                        pOtvPodr2 == SpDocs.cOtvPodr
                                     )) <> tsOk )
      Exit;
    }

  if ( (optView AND 1024) <> 0 )
    {
      if (RecordExists SpGrSch where (( pGrDogs  == SpGrSch.cGroupSch AND
                                        word(1)  == SpGrSch.wList     AND
                                        pDogovor == SpGrSch.cBaseDoc
                                     )) <> tsOk)
        Exit;
    }

  if ( (optView AND 4096) <> 0 )
    {
      if ( ( wDirect <> DogDirect ) AND ( DogDirect <> 3 ) )
        Exit;
    }

  if ( (optView AND 8192) <> 0 )
    {
      var Flag: boolean; Flag := FALSE;
      // проверка на соответствие заказа договору
      _LOOP IerDog where (( pDogovor == IerDog.cUpRec ))
        if oThemeFuncs.CheckThemeOnDogovor(pTheme, IerDog.cRec)
          {
            Flag := TRUE;
            Break;
          }

      if not Flag
        Exit;
    }

  Result := TRUE;
}

//-- Установить заголовок окна
Procedure SetMyTitle;
{
  Var Title,
      FTitle,
      FCount  : string;

  if ( OkOne )
    Title := 'Групповой выбор '
             + if(( ( pAttach = 1 ) AND OneLevel AND ( pOwn <> 0 ) ) OR ( pAttach = 2 ), 'соглашений', 'договоров')
             + ' (помечено: ' + string(GetMarkerCount(MarkerDog)) + ')'
  else
    if ( ( ( pAttach = 1 ) AND OneLevel AND ( pOwn <> 0 ) ) OR ( pAttach = 2 ) )
      Title := 'Выбор соглашения';
    else
      Title := 'Выбор договора';

  FTitle := '';

  if ( (optView AND 1   ) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'дате заключения';

  if ( (optView AND 2   ) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'дескриптору';

  if ( (optView AND 4   ) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'группе пользователей';

  if ( (optView AND 8   ) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'виду договора';

  if ( (optView AND 16  ) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'контрагенту 1';

  if ( (optView AND 32  ) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'контрагенту 2';

  if ( (optView AND 64  ) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'статусу';

  if ( (optView AND 128 ) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'назначению';

  if ( (optView AND 256 ) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'ЦО договора/соглашения';

  if ( (optView AND 512 ) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'спецификации с ЦО';

  if ( (optView AND 1024) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'группе договоров';

  if ( (optView AND 2048) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'типу договора';

  if ( (optView AND 4096) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'направлению договора';

  if ( (optView AND 8192) <> 0 )
    FTitle += if(FTitle <> '', ', ','') + 'заказу НИОКР';

  FCount := InStr(',', FTitle);

  if ( FTitle = '' )
    SetTitle(Title);
  else
    SetTitle(Title  + ' (установлен' + if(FCount > 1, 'ы', '') +
                      ' фильтр'      + if(FCount > 1, 'ы', '') +
                      ' по ' + FTitle + ')');
}

