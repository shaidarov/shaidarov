    {
      AddBounds(tbNode);

      TreeJumpToRecord(trDogovor, prmDogovor);

      SetFormat(trDogovor);

      Abort;
      Exit;
    }

  if ( ( pAttach = 0 ) AND ( Dogovor.cDogovor <> 0 ) AND ( not ( OkOne AND ( GetMarkerCount(MarkerDog) > 0 ) ) ) )
    {
      Message('Выбирать соглашения нельзя...', CancelButton + Warning);
      Abort;
      Exit;
    }

  if ( ( pAttach = 2 ) AND ( Dogovor.cDogovor = 0 ) AND (not ( OkOne AND ( GetMarkerCount(MarkerDog) > 0 ) ) ) )
    {
      Message('Выбирать договора нельзя...', CancelButton + Warning);
      Abort;
      Exit;
    }

  if ( ( not OkOne ) AND IsValid(#Dogovor) )
    if ( ( picked = '-' ) AND (not ( OkOne AND ( GetMarkerCount(MarkerDog) > 0 ) ) ) )
      {
        Message('Нельзя пометить '
              + if(Dogovor.cDogovor = 0, 'договор', 'соглашение')
              + ' с данным статусом!', Warning);

        Abort;
        Exit;
      }

  if ( OkOne )
    if ( ( GetMarkerCount(MarkerDog) = 0 ) AND IsValid(#Dogovor) )
      if ( not OneMarkPick(true) )
        {
          Abort;
          Exit;
        }

  pOwn := 0;

  if ( Dogovor.cDogovor <> 0 )
    {
      ResetBounds(#Dogovor2);

      var _Nrec2: comp; _Nrec2 := Dogovor.cDogovor;

      While (_Nrec2 <> 0) do
        {
          if ( GetFirst Dogovor2 where (( _Nrec2 == Dogovor2.nRec )) <> tsOk )
            Break;

          pOwn   := Dogovor2.nRec;
          _Nrec2 := Dogovor2.cDogovor;
