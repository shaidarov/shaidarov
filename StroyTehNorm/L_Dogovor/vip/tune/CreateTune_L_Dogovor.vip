//------------------------------------------------------------------------------
Handler with replace L_DogovorAdd_DateModifyTune on ExtensionPoint
  epDateModifyTuneEx (TS : ObjStartCreateTuneEx) [220]
Action
{
  TS.SetLastDateModTuneComp('L_Dogovor', 17, 10, 2007);
//  TS.SetLastDateModTune(01, 01, 2008);
  Result := true;
}
