#IFDEF _EXCEL_MATRIX_    
  XLFreeMatrixEx(mas_excel) ;
#ENDIF
  XLGETACTIVEWORKBOOKNAME(wstr2) ;
  xlCloseWorkBookByName(wstr2) ;
  xlKillExcel ;
logstrtofile('xls.log', 'Finish..')      
  ReadDataFromExcelWithLS:=wkluch ;
}

