       Saldo.StSubSchet := loc_SubSchet;
       Saldo.StTypeInitDoc := loc_StTypeInitDoc;
       Saldo.StNoInitDoc   := loc_NoInitDoc;
       Saldo.TypeInitDoc   := loc_TypeInitDoc;
       Saldo.cInitDoc      := loc_cInitDoc;

          Case OrgAnNum of
