//   }
//   else
     FilialsName :=FilialsName+FPCO.name+',';

  StartNewVisual( vtRotateVisual , vfTimer, 'Подготовка данных по регистру', 1);
  RunInterface(CreateOtchet,dFrom,dTo, FilialsName);        // фильтр филиалы  FPCO.name
  StopVisual('', 0);

}
  end;
