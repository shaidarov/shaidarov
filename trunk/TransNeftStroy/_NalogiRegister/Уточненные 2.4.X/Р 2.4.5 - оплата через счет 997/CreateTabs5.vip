#include PickBuh.vih
Interface getNastrOSnRec AlwaysReturn;
create view
var
  NastrOSnRec
        :comp;

from NastrOS
where ((
                   'Бухгалтерский учет'==NASTROS.Name
             and 16==NastrOS.TiDK
           ));

parameters
  NastrOSnRec;

  HandleEvent
    cmInit:{
      if (GetFirst  NastrOS = tsok){
        NastrOSnRec:=NastrOS.nRec;
      } else {
        NastrOSnRec:=0;
      }
      abort;
    }
  end;
end.
