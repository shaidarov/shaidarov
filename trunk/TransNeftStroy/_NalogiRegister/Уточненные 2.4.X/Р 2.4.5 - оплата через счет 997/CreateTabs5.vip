Interface CheckOborot AlwaysReturn;
var
  dTo       : date;
  Oborot    : double;
  KodPodrCO : string;     // фильтр филиалы

create view
from
  Oborot
, SpKau
, Spkau SpkauKr
, KatPodr KatPodrD // по дебету      // фильтр филиалы
, KatPodr KatPodrK // по кредиту     // фильтр филиалы
, PickBuh
, FpCO
, FpPeriod
where
((
        Oborot.KAUOS[3] /== SpKau.nRec
   and  Oborot.KAUKS[3] /== SpKauKr.nRec
   and  Oborot.KAUOS[2] /== FpPeriod.nrec
//-----
   and  cgKau_FpCO == PickBuh.KodTable

   and  oborot.KodSpO == KatPodrD.nRec               // фильтр филиалы
   and  ( KodPodrCO = SubStr(KatPodrD.kod,1,2) )     // фильтр филиалы

   and  oborot.KodSpK == KatPodrK.nRec               // фильтр филиалы
   and  ( KodPodrCO = SubStr(KatPodrK.kod,1,2) )     // фильтр филиалы

))
	 and '968'=Oborot.DBSCHETO
             and ('2'=Oborot.SUBOSSCH  and '02011702'=SpKau.Code 	//Общехозяйственные расходы, приходящиеся на основную деятельность
	       or '3'=Oborot.SUBOSSCH and '0205'=SpKau.Code  )         //Часть общехозяйственных расходов, относящаяся к деятельности обслуживающих производств и хозяйств

	 and '968'=Oborot.KRSCHETK
             and '4'=Oborot.SUBSCHK and
		(
        '02' = SpKauKr.Code or		//Оплата труда
        '03' = SpKauKr.Code		  //Вознаграждения
    )
	 and oborot.datob >= date(01,01,year(dTo))
	 and oborot.datob <= dTo
   //-------------------------------------------
   and
   (
     //String(word(DateToStr(dTo,'YY'))+1) =  SubStr(FpPeriod.Code,1,2)
     InStr(DateToStr(dTo,'YYYY'), FpPeriod.Name) > 0
   )
;

parameters
  dTo, Oborot;        // фильтр филиалы + код

create view ob996
as select *
from
   Oborot Oborot996
  , KatPodr KatPodrD // по дебету      // фильтр филиалы
  , KatPodr KatPodrK // по кредиту     // фильтр филиалы
  , FpPeriod
where
((
//-----
        Oborot996.KAUKS[1] /== FpPeriod.nrec
   and dTo >>= oborot996.datob
   and  Oborot996.KodSpO == KatPodrD.nRec
   and  ( KodPodrCO = SubStr(KatPodrD.kod,1,2) )     // фильтр филиалы
//-----
   and  Oborot996.KodSpK == KatPodrK.nRec
   and  ( KodPodrCO = SubStr(KatPodrK.kod,1,2) )     // фильтр филиалы

   and 'N929' == Oborot996.SCHETO  //(NoIndex)
   and 'N996' == Oborot996.SCHETK // (NoIndex)
   and '01'   == Oborot996.SUBSCHK   (NoIndex)

   and
   (
     '01' = Oborot996.SUBOSSCH or '02' = Oborot996.SUBOSSCH
   )
   //-------------------------------------------
 ))
   and
   (
     //String(word(DateToStr(dTo,'YY'))+1) =  SubStr(FpPeriod.Code,1,2)
     InStr(DateToStr(dTo,'YYYY'), FpPeriod.Name) > 0
   )
;
//---------------------------------
/*22.08.2011 Гордеев
Дт 929.01 Кт 900 минус Дт 929.1 Кт 993.4 КАУ <Прямые и косвенные расходы / Расходы, связанные с производством и реализацией, кроме прямых / Страховые взносы>.
*/
create view ob929
as select *
from
   Oborot Oborot929
  , KatPodr KatPodrD // по дебету      // фильтр филиалы
  , KatPodr KatPodrK // по кредиту     // фильтр филиалы
  , FpPeriod
where
((
//-----
	      dTo >>= oborot929.datob
   and  word(20093)     == spkau.KODGRKAU
   and  '020104'   == SpKau.Code
   and  Oborot929.KodSpO == KatPodrD.nRec
   and  ( KodPodrCO = SubStr(KatPodrD.kod,1,2) )     // фильтр филиалы
//-----
   and  Oborot929.KodSpK == KatPodrK.nRec
   and  ( KodPodrCO = SubStr(KatPodrK.kod,1,2) )     // фильтр филиалы

   and 'N929' == Oborot929.SCHETO  //(NoIndex)
   and '01'   == Oborot929.SUBOSSCH
   and (
        'N900' = Oborot929.SCHETK // (NoIndex)
        or
        (
              'N993' = Oborot929.SCHETK
          and '4'   = Oborot929.SUBSCHK
          and SpKau.nrec = Oborot929.KAUKS[3]
        )
       )
))
;
//-------------------------------------------
HandleEvent
cmInit:
{
   Oborot:=0;
   _loop PickBuh
   {
     if ( GetFirst FPCO where ((PickBuh.PickRec ==  FPCO.nRec))=tsOk)
       KodPodrCO := SubStr(FPCO.LevelCode,2,2);
     _loop Oborot
     { // первые два символа кода подразделения должны быть равны коду ЦО - филиал
       if ( GetFirst KatPodrD = tsOk or GetFirst KatPodrK = tsOk )         // фильтр филиалы
         Oborot := Oborot + Oborot.sumob;
     }
     ob996._loop Oborot996
     {
      // первые два символа кода подразделения должны быть равны коду ЦО - филиал
      if ( ob996.GetFirst KatPodrD = tsOk or ob996.GetFirst KatPodrK = tsOk )         // фильтр филиалы
         Oborot := Oborot + ob996.Oborot996.Sumob;
      //    LogStrToFile('C:\Gal810\Oborot.log', ' СчетК='+Oborot.KRSCHETK+'.'+Oborot.SUBOSSCH+' СчетД='+Oborot.DBSCHETO+'.'+Oborot.KRSCHETK +' Подр='+KatPodr.code+' SpKau.Code='+SpKau.Code+' SpKauKr.Code='+SpKauKr.Code+' Сумма='+saldmoun.sums)
     }
    //22.08.11--------------------
    if ob929.GetFirst  SpKau = tsOk {}
      ob929._loop Oborot929
        if ( ob929.GetFirst KatPodrD = tsOk or ob929.GetFirst KatPodrK = tsOk )         // фильтр филиалы
        {
          if ob929.Oborot929.SCHETK = 'N900'
          {
            Oborot := Oborot + ob929.Oborot929.Sumob;
            LogStrToFile('C:\Col12.log',' плюс Д'+ob929.Oborot929.SCHETO+'.'+ob929.Oborot929.SUBOSSCH+' K'+ob929.Oborot929.KRSCHETK+'.'+ob929.Oborot929.SUBSCHK+' '+ ob929.KatPodrD.Name+' '+ob929.Oborot929.Sumob);
          }
          else
            if ob929.Oborot929.SCHETK = 'N993'
            {
              Oborot := Oborot - ob929.Oborot929.Sumob;
              LogStrToFile('C:\Col12.log','минус Д'+ob929.Oborot929.SCHETO+'.'+ob929.Oborot929.SUBOSSCH+' K'+ob929.Oborot929.KRSCHETK+'.'+ob929.Oborot929.SUBSCHK+' '+ ob929.KatPodrD.Name+' '+ob929.Oborot929.Sumob);
            }
        }

        //---------------------
   }

   abort;
}
end;

end.

