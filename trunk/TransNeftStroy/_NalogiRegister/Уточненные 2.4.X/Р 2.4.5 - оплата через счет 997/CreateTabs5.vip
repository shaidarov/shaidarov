Interface CheckSaldo AlwaysReturn;
var
  dSal      : date;
  Saldo     : double;
  KodPodrCO : string;  // фильтр филиалы

create view
from
  SaldMoun
, SpKau
, KatPodr             // фильтр филиалы
, PickBuh
, FpCO
, FpPeriod
where
((
        dSal               == SaldMoun.DateSal
   and cgKau_FpCO == PickBuh.KodTable
   and  SaldMoun.KAUOS[3] /== SpKau.nRec
   and  SaldMoun.KAUOS[2] /== FpPeriod.nrec
   and  SaldMoun.KodSpO    == KatPodr.nRec           // фильтр филиалы
   and  ( KodPodrCO = SubStr(KatPodr.kod,1,2) )      // фильтр филиалы
))
   and  '968' = SaldMoun.DBSCHETO

   and ('2' = SaldMoun.SUBOSSCH
          and (
                  '0102'   = SpKau.Code or	//Прямые-Оплата труда
                  '0103'   = SpKau.Code or	//ПрямыеВознаграждения
                  '020102' = SpKau.Code or	//Косвенные-Оплата труда
                  '020103' = SpKau.Code	  //Косвенные-Вознаграждения
              )
         or
         '3' = SaldMoun.SUBOSSCH
              and
              (
                  '020101'=SpKau.Code	//Оплата труда
              )

       )
     and
      (
         //String(word(DateToStr(dSal,'YY'))+1) =  SubStr(FpPeriod.Code,1,2)
         InStr(DateToStr(dSal,'YYYY'), FpPeriod.Name) > 0
       )
;

parameters
  dSal, Saldo;         // фильтр филиалы + код первые две цифры кода подразделения

HandleEvent
cmInit:
{
   Saldo:=0;
   _loop PickBuh
   {
     if ( GetFirst FPCO where ((PickBuh.PickRec ==  FPCO.nRec))=tsOk)
       KodPodrCO := SubStr(FPCO.LevelCode,2,2);
     _loop SaldMoun
     { // первые два символа кода подразделения должны быть равно коду ЦО - филиал
       if ( GetFirst KatPodr = tsOk )       // фильтр филиалы
         if   SALDMOUN.VIOB = word(1)
           Saldo:=Saldo + saldmoun.sums;
         else
           Saldo:=Saldo - saldmoun.sums;
     }
   }

   abort;
}
 end;

end.
