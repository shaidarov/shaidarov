  UserDeskRep.ResWord[31] :=0; //('Иерархия 1',,sci178Esc) : noprotect;
  UserDeskRep.ResWord[13]:=27;// месяц ('Группировка 3',,sci1378Esc) : #_list_group
  UserDeskRep.ResWord[14] :=0; //('Иерархия 2',,sci178Esc) : noprotect;
  UserDeskRep.ResWord[32] :=0; //('Иерархия 1',,sci178Esc) : noprotect;
  UserDeskRep.ResWord[15]:=6 ;//ВО ('Группировка 4',,sci1378Esc) : #_list_group
  UserDeskRep.ResWord[16] :=0;// ('Иерархия 3',,sci178Esc) : noprotect;
  UserDeskRep.ResWord[33] :=0;//('Иерархия 1',,sci178Esc) : noprotect;
  UserDeskRep.ResWord[17]:=0;//Категория ('Группировка 2',,sci1378Esc) : #_list_group
  UserDeskRep.ResWord[18] :=0;//('Иерархия 4',,sci178Esc) : noprotect;
  UserDeskRep.ResWord[34] :=0;//('Иерархия 1',,sci178Esc) : noprotect;
  UserDeskRep.ResWord[19] :=0;//('Группировка 5',,sci1378Esc) : #_list_group
  UserDeskRep.ResWord[20] :=0;//('Иерархия 5',,sci178Esc) : noprotect;
  UserDeskRep.ResWord[35] :=0;//('Иерархия 5',,sci178Esc) : noprotect;
  //CurCode:=0;
  ClearTable(CurCode)

  StartNewVisual(vtNumericVisual,vfTimer+vfBreak,'Обработка...', vfTimer+vfBreak);
  if not inextvisual('Расчет начислений') then
  { RestUserDeskRep
    exit;
  }
  if logfilekl
    MyLogwrite(false,'==== Сбор ФЗП ========= ')
  if not CreateReport01
  { RestUserDeskRep
    exit;
  }
  // суммы в тыс.рублей
  MoveTobot04(2,3,2,0.001)
  ClearTable(CurCode)
  
   RestUserDeskRep

   PrintDoc_04(0)
   
   CreateReport04:=true;
   rescanpanel(#UserDeskRep)
} //Function CreateReport04 :boolean;


