Function iskBlack1: Boolean;
{
 iskBlack1 := false;
 if (piExClass.GetSegCode(Sort      , KatMC.nRec) <> '') Exit;                  // Сорт: нет значения
 if (piExClass.GetSegCode(TipPokr   , KatMC.nRec) <> '') Exit;                  // Тип покрытия: нет значения
 if (piExClass.GetSegCode(Termo     , KatMC.nRec) <> '') Exit;                  // Термообработка: нет значения
 if (piExClass.GetSegCode(ColorPokr , KatMC.nRec) <> '') Exit;                  // Цвет покрытия: нет значения
 if (piExClass.GetSegCode(Pack      , KatMC.nRec) <> '') Exit;                  // Упаковка: нет значения
 if (piExClass.GetSegCode(Tolschina , KatMC.nRec) <> '') Exit;                  // Толщина: нет значения

 iskBlack1 := true;
}

Function iskBlack2: Boolean;
{
 iskBlack2 := false;
 if (piExClass.GetSegCode(Sort      , KatMC.nRec) <> '02') Exit;                  // Сорт: Сорт 2
 if (piExClass.GetSegCode(TipPokr   , KatMC.nRec) <> ''  ) Exit;                  // Тип покрытия: нет значения
 if (piExClass.GetSegCode(Termo     , KatMC.nRec) <> ''  ) Exit;                  // Термообработка: нет значения
 if (piExClass.GetSegCode(ColorPokr , KatMC.nRec) <> ''  ) Exit;                  // Цвет покрытия: нет значения
 if (piExClass.GetSegCode(Pack      , KatMC.nRec) <> ''  ) Exit;                  // Упаковка: нет значения
 if (piExClass.GetSegCode(Tolschina , KatMC.nRec) <> ''  ) Exit;                  // Толщина: нет значения

 iskBlack2 := true;
}

