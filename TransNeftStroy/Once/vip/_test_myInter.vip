
interface _test_myInter();
show at(,,60,14)

create view
var
  aTableCode   : word;
  wCount       : longInt;
  OldNRec
, NewNRec      : comp;
;

screen scMyInter 'Укажите параметры для смены nRec' (,,sci13Esc);
Fields
  aTableCode   , noprotect;
  OldNRec      , noprotect;
  NewNRec      , noprotect;
Buttons
  cmYes  ,,, 'Запуск FR-отчёта' ;
<<
  `код таблицы`  .@@@@@@@@@@@@@@@@@@@@@@
  `nRec старый`  .@@@@@@@@@@@@@@@@@@@@@@
  `nRec новый`   .@@@@@@@@@@@@@@@@@@@@@@

            <. Запуск подмены .>
>>
end;


HandleEvent
cmYes: {
  message( RecodeReferences(aTableCode, OldNRec, NewNRec, wCount, true, true) );
  message( wCount );
  }
end;

end.




.Form 'Тестовая печать пустой даты в FR'
.Ard
.F 'Nul'
.begin
        RunInterface ('_test_myInter');
end.

.endform
