    transp_godv :date ,    // год выпуска
    transp_datok :Date ,  //дата поступления
    transp_datv :date  ,  // дата выбытия
    KLASSDRIVE_NAME :string[40],     //transp.KLASSIF5 == morale.nrec 'M_TRANSP::KAR_WPS.WIN_ANALITIC.SWIN_ANALITIC.KLASSDRIVE.NAME - аналитический разрез, тип двигателя
    category :string[100],
    spec_purpose :string[100],
    transp_firm :string[50],
    chas_firm :string[50],
    zav_nomer :string[50],
    vin :string[50],
    dvig_nomer :string[50],
    chass_nomer :string[50],
    kuzov_nomer :string[50],
    dvig_marka :string[50],
    dvig_type :string[50],
    eco_class :string[50],
    empty_massa :double,
    max_massa :double,
    dvig_volume :double,
    dvig_power_ls :double,
    dvig_power_kvt :double,
    kpp_type :string[50],
    privod :string[50],
    kpp_levels :word,
    dvig_cyl :word,
    dvig_cyl_place :string[50],
    transp_color :string[40],
    transp_color_grp :string[40],
    inomarka :string[10],
    doc_reg_nomer :string[20],
    doc_reg_ser :string[20],
    doc_reg_date :date,
    doc_pts_nomer :string[20],
    doc_pts_ser :string[20],
    doc_pts_date :date,
    doc_cnf_nomer :string[20],
    doc_cnf_date :date,
