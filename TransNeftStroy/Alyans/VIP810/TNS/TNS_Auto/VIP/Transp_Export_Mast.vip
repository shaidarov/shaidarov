Function PrintDoc : boolean ;
var werr:word ;
    wstr,wpodr:string ; 
    wnpp :longint ;
{ PrintDoc:=false ;
  nmtemplate:='Avto_Mast.xls';
  if getfirst transp<>0
  { message('не нашли подходящих транспортных средств')
    exit ;
  }
  werr:=ExcelInit(nmtemplate,true,2009);
  if werr>0
  { message('Ошибка инициализации Excel по шаблону '+nmtemplate) ;
    exit ;
  }
  
  //вывод данных
  HeaderStrCount :=3 ;
  wexrow:=HeaderStrCount+1 ;
  MyXlCreaMatrix(10000,100)
  wexrow:=wexrow-1 ;
  wnpp:=0;
  _loop transp_mast ordered by index Index1
  {  if not nextvisual then exit;
     mylogwrite(false,' '+transp_mast.transp_nomer)
     wexrow:=wexrow+1;wexcol:=1 ;
     wnpp:=wnpp+1;
     MyPutExcelNumber(wnpp,0,8,0,-1,-1);//1     //№ п/п
     MyPutExcel(transp_mast.transp_nomer,8,0,-1,-1);//гос номер
     MyPutExcel(transp_mast.transp_firm,8,0,-1,-1);//марка
     MyPutExcel(transp_mast.transp_marka,8,0,-1,-1);//модель
     MyPutExcel(transp_mast.transp_marka,8,0,-1,-1);//марка модель ПТС
     MyPutExcel(transp_mast.chas_firm,8,0,-1,-1);//базовое шасси
     MyPutExcel(datetostr(transp_mast.transp_godv,'YYYY'),8,0,-1,-1);//год выпуска
     MyPutExcel(transp_mast.category,8,0,-1,-1);//категория
     MyPutExcel(transp_mast.tiptex_name,8,0,-1,-1);//тип тс
     MyPutExcel(transp_mast.spec_purpose,8,0,-1,-1);//спец назначение
     MyPutExcel(transp_mast.katos_innum,8,0,-1,-1);//инв номер
     MyPutExcel(transp_mast.zav_nomer,8,0,-1,-1);//зав номер
     MyPutExcel(transp_mast.vin,8,0,-1,-1);//VIN
     MyPutExcel(transp_mast.dvig_nomer,8,0,-1,-1);//Номер двигателя
     MyPutExcel(transp_mast.chass_nomer,8,0,-1,-1);//номер шасси
     MyPutExcel(transp_mast.kuzov_nomer,8,0,-1,-1);//номер кузова
     MyPutExcel(transp_mast.dvig_marka,8,0,-1,-1);//модель двигателя
     MyPutExcel(transp_mast.dvig_type,8,0,-1,-1);//тип двигателя
     MyPutExcel(transp_mast.eco_class,8,0,-1,-1);//эколог класс
     MyPutExcel(string(transp_mast.empty_massa),8,0,-1,-1);//масса без нагрузки
     MyPutExcel(string(transp_mast.max_massa),8,0,-1,-1);//макс масса
     MyPutExcel(string(transp_mast.dvig_volume),8,0,-1,-1);//объем двигателя
     MyPutExcel(string(transp_mast.dvig_power_ls),8,0,-1,-1);//мощн двигателя лс
     MyPutExcel(string(transp_mast.dvig_power_kvt),8,0,-1,-1);//мощн двиг квт
     MyPutExcel(transp_mast.kpp_type,8,0,-1,-1);//вид КПП
     MyPutExcel(transp_mast.privod,8,0,-1,-1);//привод
     MyPutExcel(transp_mast.kpp_levels,8,0,-1,-1);//количество передач
     MyPutExcel(transp_mast.dvig_cyl,8,0,-1,-1);//количество цилиндров
     MyPutExcel(transp_mast.dvig_cyl_place,8,0,-1,-1);//располож цилиндров
     MyPutExcel(transp_mast.transp_color,8,0,-1,-1);//цвет
     MyPutExcel(transp_mast.transp_color_grp,8,0,-1,-1);//группа цветов
     MyPutExcel(transp_mast.inomarka,8,0,-1,-1);//иномарка
     MyPutExcel(transp_mast.doc_reg_nomer,8,0,-1,-1);//свидетельство о регистрации номер
     MyPutExcel(transp_mast.doc_reg_ser,8,0,-1,-1);//свидетельство о регистрации серия
     MyPutExcel(replace(datetostr(transp_mast.doc_reg_date, 'DD.MM.YYYY'),'ДД.ММ.ГГГГ',''),8,0,-1,-1);//свидетельство о регистрации дата
     MyPutExcel(transp_mast.doc_pts_nomer,8,0,-1,-1);//ПТС номер
     MyPutExcel(transp_mast.doc_pts_ser,8,0,-1,-1);//ПТС серия
     MyPutExcel(datetostr(transp_mast.doc_pts_date, 'DD.MM.YYYY'),8,0,-1,-1);//ПТС дата
     MyPutExcel(transp_mast.doc_cnf_nomer,8,0,-1,-1);//номер одобрения
     MyPutExcel(replace(datetostr(transp_mast.doc_cnf_date, 'DD.MM.YYYY'),'ДД.ММ.ГГГГ',''),8,0,-1,-1);//дата одобрения
     MyPutExcel(transp_mast.izg_name,8,0,-1,-1);//завод изготов
     MyPutExcel(transp_mast.izg_country,8,0,-1,-1);//страна изготов
     MyPutExcel(transp_mast.sup_name,8,0,-1,-1);//поставщик
     MyPutExcel(replace(datetostr(transp_mast.transp_datok, 'DD.MM.YYYY'),'DD.MM.YYYY',''),8,0,-1,-1);//дата одобрения
     MyPutExcel(transp_mast.oper_keep,8,0,-1,-1);//дата учета тс
     MyPutExcel(replace(datetostr(transp_mast.oper_keep_date, 'DD.MM.YYYY'),'ДД.ММ.ГГГГ',''),8,0,-1,-1);//дата учета тс
     MyPutExcel(transp_mast.base_keep_out,8,0,-1,-1);//причина снятия с учета
     MyPutExcel(transp_mast.pos_tex_tabel,8,0,-1,-1);//код позиции в табеле техоснащенности
     MyPutExcel(transp_mast.katpodr_name,8,0,-1,-1);//тип подразделения
     MyPutExcelNumber(transp_mast.balans_summa,2,8,0,-1,-1);//баланс стоимость
     MyPutExcelNumber(transp_mast.rest_summa,2,8,0,-1,-1);//остаточ стоимость
     MyPutExcel(transp_mast.kod_okof ,8,0,-1,-1);//код окоф
     MyPutExcel(replace(datetostr(transp_mast.plan_spis_date, 'DD.MM.YYYY'),'ДД.ММ.ГГГГ',''),8,0,-1,-1);//дата учета тс
     MyPutExcel(transp_mast.podr_attach,8,0,-1,-1);//служба закрепления
     MyPutExcel(transp_mast.note,8,0,-1,-1);//примечание
     MyPutExcel(transp_mast.mast_id,8,0,-1,-1);//ИД
  } //_loop My_WorkGsm where (( 1 == My_WorkGsm.pa))  ordered by index Index4
  wexrow:=wexrow+1 ;
  
  MyxlWriteMatrix(wexrow);
  xlFreeMatrix;
  matrixkl:=False;
  // вывод итогов

  PrintDoc:=true ;

} //Function PrintDoc : boolean ;
