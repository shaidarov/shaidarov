  else
     XlRes := xlSetCellStringValue('ŽŽŽ "Ž¬áª­¥äâ¥£ §á¯¥æáâà®©"',6,3,6,3);
  XlRes := xlSetCellStringValue(OrdMain.Sklad,7,4,7,4);
  XlRes := xlSetCellStringValue(OrdMain.Data,11,1,11,1);
