  if (OrdMain.Mol <> '')
     XlRes := xlSetCellStringValue(OrdMain.Mol,20,7,20,7);
  else
     XlRes := xlSetCellStringValue(OrdMain.MolTo,20,7,20,7);
      
//--------------------------------------------------------¡ô?¦ð¤ðòÿ¦ð¯--------
  XlRes := xlCreateMatrix(kolvo,13);
  _LOOP OrdSpec
        {
         XlRes := xlStWriteToMatrix(ii,1, OrdSpec.NameMC);
