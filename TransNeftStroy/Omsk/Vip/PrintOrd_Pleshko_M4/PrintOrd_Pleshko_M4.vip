//-----------¡¢ Ròð ð  ÿ¿òÿ-----

 do
   {
    if(kolvo <> 1)
      {
       xlRes := xlRunMacro('AddSt');
       jj := jj + 1;
      }
   }
 while(jj < Kolvo - 1)

//------------------------------

  xlRes := xlWriteMatrixToExcel( 17, 1);

//----------------------------------------------------------------------------
  xlCloseWorkBookByName(Shablon);
  xlKillExcel; 
}


